# Connect Smart - Environment Variables
# Kopieer dit bestand naar .env en vul de waarden in

# Anthropic (Claude) - voor AI
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# Vapi.ai - voor telefoon/voice
VAPI_PRIVATE_KEY=xxx
VAPI_PUBLIC_KEY=xxx

# Telegram Bot
TELEGRAM_BOT_TOKEN=xxx:yyy

# WhatsApp Business API (optioneel)
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=

# Supabase - voor database/geheugen
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_KEY=

# OpenAI - voor Whisper speech-to-text (spraakberichten)
OPENAI_API_KEY=sk-xxx

# Debug mode
DEBUG=true
