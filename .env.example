# Connect Smart - Environment Variables
# Kopieer dit bestand naar .env en vul de waarden in

# Anthropic (Claude) - voor AI
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# Vapi.ai - voor telefoon/voice
VAPI_PRIVATE_KEY=xxx
VAPI_PUBLIC_KEY=xxx

# ElevenLabs stem (optioneel): Voice ID uit ElevenLabs Voice Library.
# Voor Nederlands accent: zoek een Dutch voice in de library en vul de Voice ID hier in.
# De ElevenLabs API key zet je in het Vapi-dashboard onder Provider Keys (niet hier).
ELEVENLABS_VOICE_ID=7qdUFMklKPaaAVMsBTBt

# Telegram Bot
TELEGRAM_BOT_TOKEN=xxx:yyy

# WhatsApp Business API (optioneel)
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=

# Supabase - voor database/geheugen
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_KEY=

# OpenAI - voor Whisper speech-to-text (spraakberichten)
OPENAI_API_KEY=sk-xxx

# Twilio (optioneel) - voor preflight nummercheck + SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SMS_NUMBER=+31xxxxxxxxxx
TWILIO_MESSAGING_SERVICE_SID=

# Debug mode
DEBUG=true

# CORS (comma-separated origins or '*')
CORS_ALLOW_ORIGINS=*

# Google OAuth (Calendar + Gmail)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_REFRESH_TOKEN=
GOOGLE_CALENDAR_ID=primary
GMAIL_FROM_EMAIL=
